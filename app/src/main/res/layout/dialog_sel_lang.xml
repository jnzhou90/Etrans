<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgbtn_english"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/banner_english" />

    <ImageButton
        android:id="@+id/imgbtn_spanish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/banner_spanish" />

    <ImageButton
        android:id="@+id/imgbtn_portuguese"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/banner_portuguese" />

    <ImageButton
        android:id="@+id/imgbtn_french"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/banner_french" />
    <ImageButton
        android:id="@+id/imgbtn_arabic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/banner_arabic" />

    <ImageButton
        android:id="@+id/imgbtn_chinese"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/banner_chinese" />

</LinearLayout>
